local itemsToDestroy = {
    "Hopeful",
    "Dark Ripple",
    "Graveyard Mist",
    "Soulbound",
    "Dark Acolyte",
    "Darkheart",
    "Menacing",
    "Hacker",
    "Mistwalker",
    "Wisp",
}

for _, itemName in ipairs(itemsToDestroy) do
    local args = {
        "Destroy",
        itemName
    }

    local replicatedStorage = game:GetService("ReplicatedStorage")
    local inventoryEvent = replicatedStorage:WaitForChild("Events"):WaitForChild("InventoryEvent")
    inventoryEvent:FireServer(unpack(args))
end

game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("StartRoll"):FireServer()
wait(0.1)
local args = {
    [1] = "Equip"
}

game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("RolledFromClient"):FireServer(unpack(args))

   end
end

